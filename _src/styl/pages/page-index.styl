.page-control
    .part-i
        .table
            margin-bottom 0
            tr td, tr th
                text-align: center
                vertical-align: middle
            tr td div
                display block
                margin 0 auto
            tr td, tr td div input
                padding 4px
            td.desc-form
                width 40%
            td.vlan-form
                width 20%
            td.desc-form div, td.vlan-form div
                margin 0 20px
            #ssh-request
                display none
                padding 25px
                border-radius radius
                tr td
                    .input-group
                        input
                            border-radius radius
                    a
                        cursor pointer
                        font-weight bold
                tr.authorize-confirm td
                    background: cinza + 65%
                    text-align: left
                    padding 25px
                    p
                        display: inline-block
                        margin-right 13px
                    .btn
                        margin-left 6px
        .alert
            display none
        .link-create-olt
            margin 15px 0
            text-transform: uppercase
            display inline-flex
            height 50px
            align-items center
            i.fa
                margin-left: 8px
                color colors
        #main-loader
            display block
            width 145px
            height 50px
            text-align: center
            i.fa, p
                line-height: 50px
                display: inline-block
            i.fa
                float left
                font-size: 50px
                color colors
            p
                float: right
                margin 0
        